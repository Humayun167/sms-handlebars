<main class="app-shell">
    <aside class="sidebar">
        <h2>SMS</h2>
        <nav>
            <a href="/">Dashboard</a>
            <a href="/students">Students</a>
            <a href="/teachers">Teachers</a>
            <a href="/classes">Classes</a>
            <a href="/announcements">Announcements</a>
        </nav>
    </aside>

    <section class="content">
        <header class="topbar">
            <div>
                <h1>{{title}}</h1>
                <p>{{subtitle}}</p>
            </div>
        </header>

        <section class="stats-grid">
            <article class="card stat-card">
                <h3>Total Students</h3>
                <strong>{{totalStudents}}</strong>
                <span>Current enrolled students</span>
            </article>
            <article class="card stat-card">
                <h3>Avg Attendance</h3>
                <strong>{{averageAttendance}}</strong>
                <span>All grades combined</span>
            </article>
            <article class="card stat-card">
                <h3>High Attendance</h3>
                <strong>{{highAttendance}}</strong>
                <span>Students with 95%+</span>
            </article>
            <article class="card stat-card">
                <h3>Classes Covered</h3>
                <strong>{{gradeOptions.length}}</strong>
                <span>Active class groups</span>
            </article>
        </section>

        {{#if hasMessage}}
            <div class="card alert-card">{{message}}</div>
        {{/if}}

        <section class="grid-two-col student-layout">
            <article class="card">
                <div class="section-head">
                    <h2>{{#if isEditing}}Edit Student{{else}}Add New Student{{/if}}</h2>
                    {{#if isEditing}}
                        <a class="text-link" href="/students">Cancel</a>
                    {{/if}}
                </div>

                <form class="student-form" method="POST" action="{{#if isEditing}}/students/update/{{form.id}}{{else}}/students/add{{/if}}">
                    <label>
                        Roll Number
                        <input type="text" name="roll" required value="{{form.roll}}" placeholder="S-200">
                    </label>
                    <label>
                        Full Name
                        <input type="text" name="name" required value="{{form.name}}" placeholder="Student name">
                    </label>
                    <label>
                        Class
                        <select name="class" required>
                            {{#each gradeOptions}}
                                <option value="{{value}}" {{#if selected}}selected{{/if}}>Class {{value}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        Phone
                        <input type="text" name="phone" required value="{{form.phone}}" placeholder="555-1200">
                    </label>
                    <button type="submit">{{#if isEditing}}Update Student{{else}}Save Student{{/if}}</button>
                </form>
            </article>

            <article class="card">
                <div class="section-head">
                    <h2>Filters</h2>
                </div>
                <form class="student-form" method="GET" action="/students">
                    <label>
                        Search
                        <input type="text" name="search" value="{{filters.search}}" placeholder="Name, roll or phone">
                    </label>
                    <label>
                        Class
                        <select name="class">
                            <option value="all">All Classes</option>
                            {{#each gradeOptions}}
                                <option value="{{value}}" {{#if selected}}selected{{/if}}>Class {{value}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        Attendance Sort
                        <select name="attendanceSort">
                            <option value="default" {{#if filters.attendanceDefaultSelected}}selected{{/if}}>Default</option>
                            <option value="asc" {{#if filters.attendanceAscSelected}}selected{{/if}}>Low to High</option>
                            <option value="desc" {{#if filters.attendanceDescSelected}}selected{{/if}}>High to Low</option>
                        </select>
                    </label>
                    <button type="submit">Apply Filters</button>
                </form>
            </article>
        </section>

        <article class="card">
            <div class="section-head">
                <h2>Student Records</h2>
                <a class="text-link" href="/students">Reset</a>
            </div>
            <div class="table-wrap">
                <table>
                    <thead>
                        <tr>
                            <th>Roll</th>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if students.length}}
                            {{#each students}}
                                <tr>
                                    <td>{{roll}}</td>
                                    <td>{{name}}</td>
                                    <td>Class {{class}}</td>
                                    <td>{{phone}}</td>
                                    <td>
                                        <div class="row-actions">
                                            <a class="small-link" href="/students?editId={{id}}">Edit</a>
                                            <form method="POST" action="/students/delete/{{id}}" onsubmit="return confirm('Delete this student?')">
                                                <button type="submit" class="danger-btn">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="5" class="empty-state">No students found for current filters.</td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </article>
    </section>
</main>
