<main class="app-shell">
    <aside class="sidebar">
        <h2>SMS</h2>
        <nav>
            <a href="/">Dashboard</a>
            <a href="/students">Students</a>
            <a href="/teachers">Teachers</a>
            <a href="/classes">Classes</a>
            <a href="/announcements">Announcements</a>
        </nav>
    </aside>

    <section class="content">
        <header class="topbar">
            <div>
                <h1>{{title}}</h1>
                <p>{{subtitle}}</p>
            </div>
        </header>

        <section class="stats-grid">
            <article class="card stat-card">
                <h3>Total Teachers</h3>
                <strong>{{totalTeachers}}</strong>
                <span>Active faculty members</span>
            </article>
            <article class="card stat-card">
                <h3>Classes Assigned</h3>
                <strong>{{totalClassesHandled}}</strong>
                <span>Total class load</span>
            </article>
            <article class="card stat-card">
                <h3>Avg Experience</h3>
                <strong>{{averageExperience}}</strong>
                <span>Teaching experience</span>
            </article>
            <article class="card stat-card">
                <h3>Senior Teachers</h3>
                <strong>{{seniorTeachers}}</strong>
                <span>8+ years experience</span>
            </article>
        </section>

        {{#if hasMessage}}
            <div class="card alert-card">{{message}}</div>
        {{/if}}

        <section class="grid-two-col student-layout">
            <article class="card">
                <div class="section-head">
                    <h2>{{#if isEditing}}Edit Teacher{{else}}Add New Teacher{{/if}}</h2>
                    {{#if isEditing}}
                        <a class="text-link" href="/teachers">Cancel</a>
                    {{/if}}
                </div>

                <form class="student-form" method="POST" action="{{#if isEditing}}/teachers/update/{{form.id}}{{else}}/teachers/add{{/if}}">
                    <label>
                        Employee ID
                        <input type="text" name="employeeId" required value="{{form.employeeId}}" placeholder="T-300">
                    </label>
                    <label>
                        Full Name
                        <input type="text" name="name" required value="{{form.name}}" placeholder="Teacher name">
                    </label>
                    <label>
                        Subject
                        <select name="subject" required>
                            {{#each subjectOptions}}
                                <option value="{{value}}" {{#if selected}}selected{{/if}}>{{value}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        Assigned Classes
                        <input type="number" min="0" name="classes" required value="{{form.classes}}" placeholder="0">
                    </label>
                    <label>
                        Experience (years)
                        <input type="number" min="0" name="experience" required value="{{form.experience}}" placeholder="0">
                    </label>
                    <label>
                        Phone
                        <input type="text" name="phone" required value="{{form.phone}}" placeholder="555-3200">
                    </label>
                    <button type="submit">{{#if isEditing}}Update Teacher{{else}}Save Teacher{{/if}}</button>
                </form>
            </article>

            <article class="card">
                <div class="section-head">
                    <h2>Filters</h2>
                </div>
                <form class="student-form" method="GET" action="/teachers">
                    <label>
                        Search
                        <input type="text" name="search" value="{{filters.search}}" placeholder="Name, ID or phone">
                    </label>
                    <label>
                        Subject
                        <select name="subject">
                            <option value="all">All Subjects</option>
                            {{#each subjectOptions}}
                                <option value="{{value}}" {{#if selected}}selected{{/if}}>{{value}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        Experience Sort
                        <select name="experienceSort">
                            <option value="default" {{#if filters.experienceDefaultSelected}}selected{{/if}}>Default</option>
                            <option value="asc" {{#if filters.experienceAscSelected}}selected{{/if}}>Low to High</option>
                            <option value="desc" {{#if filters.experienceDescSelected}}selected{{/if}}>High to Low</option>
                        </select>
                    </label>
                    <button type="submit">Apply Filters</button>
                </form>
            </article>
        </section>

        <article class="card">
            <div class="section-head">
                <h2>Teacher Records</h2>
                <a class="text-link" href="/teachers">Reset</a>
            </div>
            <div class="table-wrap">
                <table>
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Name</th>
                            <th>Subject</th>
                            <th>Classes</th>
                            <th>Experience</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if teachers.length}}
                            {{#each teachers}}
                                <tr>
                                    <td>{{employeeId}}</td>
                                    <td>{{name}}</td>
                                    <td>{{subject}}</td>
                                    <td>{{classes}}</td>
                                    <td>{{experienceLabel}}</td>
                                    <td>{{phone}}</td>
                                    <td>
                                        <div class="row-actions">
                                            <a class="small-link" href="/teachers?editId={{id}}">Edit</a>
                                            <form method="POST" action="/teachers/delete/{{id}}" onsubmit="return confirm('Delete this teacher?')">
                                                <button type="submit" class="danger-btn">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="7" class="empty-state">No teachers found for current filters.</td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </article>
    </section>
</main>
