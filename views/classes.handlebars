<main class="app-shell">
    <aside class="sidebar">
        <h2>SMS</h2>
        <nav>
            <a href="/">Dashboard</a>
            <a href="/students">Students</a>
            <a href="/teachers">Teachers</a>
            <a href="/classes">Classes</a>
            <a href="/announcements">Announcements</a>
        </nav>
    </aside>

    <section class="content">
        <header class="topbar">
            <div>
                <h1>{{title}}</h1>
                <p>{{subtitle}}</p>
            </div>
        </header>

        <section class="stats-grid">
            <article class="card stat-card">
                <h3>Total Classes</h3>
                <strong>{{totalClasses}}</strong>
                <span>Active classrooms</span>
            </article>
            <article class="card stat-card">
                <h3>Enrolled Students</h3>
                <strong>{{totalEnrolled}}</strong>
                <span>Across all classes</span>
            </article>
            <article class="card stat-card">
                <h3>Total Capacity</h3>
                <strong>{{totalCapacity}}</strong>
                <span>Available seats</span>
            </article>
            <article class="card stat-card">
                <h3>Occupancy Rate</h3>
                <strong>{{occupancyRate}}</strong>
                <span>School wide</span>
            </article>
        </section>

        {{#if hasMessage}}
            <div class="card alert-card">{{message}}</div>
        {{/if}}

        <section class="grid-two-col student-layout">
            <article class="card">
                <div class="section-head">
                    <h2>{{#if isEditing}}Edit Class{{else}}Add New Class{{/if}}</h2>
                    {{#if isEditing}}
                        <a class="text-link" href="/classes">Cancel</a>
                    {{/if}}
                </div>

                <form class="student-form" method="POST" action="{{#if isEditing}}/classes/update/{{form.id}}{{else}}/classes/add{{/if}}">
                    <label>
                        Class Name
                        <input type="text" name="className" required value="{{form.className}}" placeholder="Class 6 - A">
                    </label>
                    <label>
                        Class
                        <select name="grade" required>
                            {{#each gradeOptions}}
                                <option value="{{value}}" {{#if selected}}selected{{/if}}>Class {{value}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        Room
                        <input type="text" name="room" required value="{{form.room}}" placeholder="A-101">
                    </label>
                    <label>
                        Class Teacher
                        <select name="classTeacher" required>
                            {{#each teacherOptions}}
                                <option value="{{name}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        Capacity
                        <input type="number" min="1" name="capacity" required value="{{form.capacity}}" placeholder="40">
                    </label>
                    <label>
                        Enrolled
                        <input type="number" min="0" name="enrolled" required value="{{form.enrolled}}" placeholder="0">
                    </label>
                    <button type="submit">{{#if isEditing}}Update Class{{else}}Save Class{{/if}}</button>
                </form>
            </article>

            <article class="card">
                <div class="section-head">
                    <h2>Filters</h2>
                </div>
                <form class="student-form" method="GET" action="/classes">
                    <label>
                        Search
                        <input type="text" name="search" value="{{filters.search}}" placeholder="Class, room or teacher">
                    </label>
                    <label>
                        Class
                        <select name="grade">
                            <option value="all">All Classes</option>
                            {{#each gradeOptions}}
                                <option value="{{value}}" {{#if selected}}selected{{/if}}>Class {{value}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <label>
                        Occupancy Sort
                        <select name="occupancySort">
                            <option value="default" {{#if filters.occupancyDefaultSelected}}selected{{/if}}>Default</option>
                            <option value="asc" {{#if filters.occupancyAscSelected}}selected{{/if}}>Low to High</option>
                            <option value="desc" {{#if filters.occupancyDescSelected}}selected{{/if}}>High to Low</option>
                        </select>
                    </label>
                    <button type="submit">Apply Filters</button>
                </form>
            </article>
        </section>

        <article class="card">
            <div class="section-head">
                <h2>Class Records</h2>
                <a class="text-link" href="/classes">Reset</a>
            </div>
            <div class="table-wrap">
                <table>
                    <thead>
                        <tr>
                            <th>Class</th>
                            <th>Class Level</th>
                            <th>Room</th>
                            <th>Teacher</th>
                            <th>Seats</th>
                            <th>Occupancy</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if classes.length}}
                            {{#each classes}}
                                <tr>
                                    <td>{{className}}</td>
                                    <td>Class {{grade}}</td>
                                    <td>{{room}}</td>
                                    <td>{{classTeacher}}</td>
                                    <td>{{seatsLabel}}</td>
                                    <td>{{occupancy}}%</td>
                                    <td>
                                        <div class="row-actions">
                                            <a class="small-link" href="/classes?editId={{id}}">Edit</a>
                                            <form method="POST" action="/classes/delete/{{id}}" onsubmit="return confirm('Delete this class?')">
                                                <button type="submit" class="danger-btn">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="7" class="empty-state">No classes found for current filters.</td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </article>
    </section>
</main>
